<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_semi_fragment"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/semi_fragment_layout_height"
        android:background="@color/bg_primary"
        android:visibility="invisible"
        android:padding="@dimen/semi_fragment_layout_padding">

        <TextView
            android:id="@+id/notification_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/dismiss"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/notification_text"
            android:layout_margin="@dimen/notification_text_margin"/>

        <Button
            android:id="@+id/additional_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/dismiss"
            android:padding="@dimen/notification_button_padding"
            android:textColor="@android:color/white"
            android:textSize="@dimen/notification_button_text"
            android:background="@android:color/transparent"
            android:visibility="gone"/>

        <Button
            android:id="@+id/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/notification_button_padding"
            android:text="@string/dismiss"
            android:textColor="@android:color/white"
            android:textSize="@dimen/notification_button_text"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

</RelativeLayout>